</html>
<body>
  <div class="container-fluid">



    <div class="row" >  
        <div class="col col-md-6 " style="border-right:1px solid #b1b1b1;">
            <h2 class="mx-3 py-5">Check & procced</h2>
            <div class="mb-3 " >
                <form action="/main" method="post" style="display: flex; flex-direction:row">
                    <div class="mb-3 mx-3" >
                        <label class="form-label"  >Enter centre name</label>
                    </div>
                    <div class="mb-3 mx-3" >
                        <input type="text" name="centreName" class="form-control" placeholder="">
                        <input type="hidden" name="search" value="true" />
                    </div>
                    <div class="mb-3 mx-3" >
                        <button type="submit" class="btn btn-primary"> Search </button>
                    </div>
                </form>
            </div>
            <div class="mb-3">

              <% if(typeof searchResult != 'undefined'){ %>
                <div class="d-flex flex-row bd-highlight mb-3">
                  <div style="width: 150px;" class="p-2 bd-highlight"> <%= searchResult.centreName %> </div>
                  <div style="width: 150px;" class="p-2 bd-highlight"> <%= searchResult.address %> </div>
                  <div style="width: 150px;" class="p-2 bd-highlight"> <%= searchResult.status %> </div>
            </div>
              <% if(searchResult.status === "availabe"){%> 
            <button type="submit" class="btn bd-primary"> <a href="/proceed">Next</a></button>
                <% }else{ %>
                  <div class="mb-3">
                    <p class="mb-3"> Sorry! but vaccine will be available soon</p>
                  </div>
                  <% } %>  
              <% }else{ %> <%= message %> <% } %>
              
            </div>
        </div>
        <div class="col col-md-6 border-right-0" >
           <div class="container">
            <h2 class="mx-3 py-3">Cente Details</h2>
            <div class="mb-3">
                
                    <% for(var i=0; i < result.length; i++) { %>
                       <div class="d-flex flex-row bd-highlight mb-3">
                            <div style="width: 150px;" class="p-2 bd-highlight"><%= result[i].centreName %></div>
                            <div style="width: 150px;" class="p-2 bd-highlight"><%= result[i].address %></div>
                            <!-- <div style="width: 150px;" class="p-2 bd-highlight"><%= result[i].status %></div> -->
                      </div>

                    <% } %>
                    
            </div>
           </div>
        </div>
    </div>


<%- include('../views/partials/footer') %> 